<Window x:Class="WpfAnimationDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfAnimationDemo"
        mc:Ignorable="d"
        Title="{Binding Path=Width, ElementName=b}" Height="350" Width="525">
    <Canvas>
        <Button Name="b" Click="b_Click" Width="50" >Ok</Button>
        <TextBlock Name="tb" Width="100" Height="100" 
                   Foreground="White"
                   Canvas.Left="143" Canvas.Top="38" FontSize="40">
            <TextBlock.Background>
                <SolidColorBrush Color="Blue"></SolidColorBrush>
            </TextBlock.Background>
            Test</TextBlock>
    </Canvas>
</Window>
