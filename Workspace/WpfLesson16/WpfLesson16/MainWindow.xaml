<Window x:Class="WpfLesson16.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfLesson16"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <StackPanel>
        <WrapPanel HorizontalAlignment="Center">
            <Button Click="Button_Click">Open</Button>
            <TextBox Name="tb_time">Time</TextBox>
            <ProgressBar Name="pb_time" Width="200"></ProgressBar>
            <TextBlock Name="time_curr"/>
            <TextBlock Width="50"></TextBlock>
            <TextBlock Name="time_end"/>
        </WrapPanel>
        <WrapPanel HorizontalAlignment="Center">            
            <Button Click="Button_Click_1">Play</Button>
            <Button Click="Button_Click_2">Stop</Button>
            <Button Click="Button_Click_3">Pause</Button>
            <Button Click="Button_Click_4">Resume</Button>
        </WrapPanel>
    </StackPanel>
</Window>
