<Window x:Class="RoutedEventsDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RoutedEventsDemo"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Border Background="{Binding BackgroundColor}"></Border>
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="10" Button.Click="StackPanel_Click">
            <Button FontSize="18" Margin="5" Padding="3">Red</Button>
            <Button FontSize="18" Margin="5" Padding="3">Green</Button>
            <Button FontSize="18" Margin="5" Padding="3">Blue</Button>
        </StackPanel>
    </Grid>
</Window>
