<Window x:Class="WpfApplication1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApplication1"
        mc:Ignorable="d"
        AllowsTransparency="True"
        WindowStyle="None"
        Background="Transparent"
        Title="MainWindow" Height="350" Width="525">
    <!--<Window.Background>
        <ImageBrush ImageSource="bg_image.png" />
    </Window.Background>-->
    <Window.Resources>
        <ControlTemplate TargetType="Window" x:Key="win">
            <Ellipse Width="600" Height="900"></Ellipse>
        </ControlTemplate>
    </Window.Resources>
    <Border CornerRadius="300" Background="LightBlue" 
            BorderThickness="2" BorderBrush="Black">
    <Grid>
        <Button Width="100" Height="100" 
                Template="{StaticResource buttonTemplate}">Button</Button>
    </Grid>
    </Border>
</Window>
