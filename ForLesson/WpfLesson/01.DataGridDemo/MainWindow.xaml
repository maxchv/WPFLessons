<Window x:Class="_01.DataGridDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_01.DataGridDemo"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <ObjectDataProvider x:Key="products" ObjectType="local:ProductRepository" MethodName="FindAll"/>
    </Window.Resources>
    <StackPanel>
        <DataGrid ItemsSource="{Binding Source={StaticResource products}}"
                  RowBackground="LightBlue"
                  AlternatingRowBackground="LightYellow"
                  GridLinesVisibility="All"
                  HeadersVisibility="All"
                  HorizontalGridLinesBrush="Black"
                  VerticalGridLinesBrush="Black"
                  AutoGenerateColumns="True"  />
    </StackPanel>
</Window>
